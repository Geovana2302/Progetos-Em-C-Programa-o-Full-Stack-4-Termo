<Window x:Class="ProjetoVet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoVet"
        mc:Ignorable="d"
        Title="Sistema de Gerenciamento Vet" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorNavy" Color="#000080"/>
        <SolidColorBrush x:Key="ColorLightGray" Color="#F5F5F4"/>
        <SolidColorBrush x:Key="ColorYellow" Color="#FFE676"/>
        <SolidColorBrush x:Key="ColorLightYellow" Color="#FDFD95"/>

        <Style TargetType="Button" x:Key="MenuButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ColorLightGray}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10, 5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20, 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorYellow}"/>
                    <Setter Property="Foreground" Value="{StaticResource ColorNavy}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource ColorNavy}">
            <StackPanel Orientation="Vertical">

                <Border Background="{StaticResource ColorLightGray}" 
                        CornerRadius="10" 
                        Margin="20">
                    <Image Source="/Assets/logoVet.png" 
                           Stretch="Uniform"
                           Margin="5"/>
                </Border>

                <Button Content="Tutores" Style="{StaticResource MenuButton}" Click="ButtonTutores_Click"/>
                <Button Content="Animais" Style="{StaticResource MenuButton}" Click="ButtonAnimais_Click"/>
                <Button Content="Veterinários" Style="{StaticResource MenuButton}" Click="ButtonVeterinarios_Click"/>
                <Button Content="Funcionários" Style="{StaticResource MenuButton}" Click="ButtonFuncionarios_Click"/>

                <Border Height="1" Background="{StaticResource ColorLightGray}" Margin="20,10" Opacity="0.3"/>

                <Button Content="Espécies" Style="{StaticResource MenuButton}" Click="ButtonEspecies_Click"/>
                <Button Content="Raças" Style="{StaticResource MenuButton}" Click="ButtonRacas_Click"/>

            </StackPanel>
        </Border>

        <Frame Grid.Column="1" 
               x:Name="MainContentFrame" 
               NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>