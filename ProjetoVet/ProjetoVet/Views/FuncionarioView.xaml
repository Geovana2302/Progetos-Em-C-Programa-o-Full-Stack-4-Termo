<UserControl x:Class="ProjetoVet.Views.FuncionarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetoVet.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="750"
             Background="#FF8BCCEE">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColorNavy" Color="#000080"/>
        <Style TargetType="TextBlock" x:Key="TitleText">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorNavy}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorNavy}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="SaveButton">
            <Setter Property="Background" Value="{StaticResource ColorNavy}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Gerenciamento de Funcionários" Style="{StaticResource TitleText}" FontSize="24" FontWeight="Bold" />

        <Expander Grid.Row="1" x:Name="FormExpander" 
                  Header="[+] Adicionar Novo Funcionário" 
                  FontSize="16" FontWeight="SemiBold" 
                  Foreground="{StaticResource ColorNavy}"
                  Margin="0,0,0,20">

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome:" Style="{StaticResource LabelText}" Margin="5"/>
                <TextBox   Grid.Row="0" Grid.Column="1" x:Name="TxtNome" Margin="5"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Telefone:" Style="{StaticResource LabelText}" Margin="5,5,5,5"/>
                <TextBox   Grid.Row="0" Grid.Column="3" x:Name="TxtTelefone" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="CPF:" Style="{StaticResource LabelText}" Margin="5"/>
                <TextBox   Grid.Row="1" Grid.Column="1" x:Name="TxtCpf" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Data Nasc.:" Style="{StaticResource LabelText}" Margin="5"/>
                <DatePicker Grid.Row="1" Grid.Column="3" x:Name="DpDataNasc" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Style="{StaticResource LabelText}" Margin="5"/>
                <TextBox   Grid.Row="2" Grid.Column="1" x:Name="TxtEmail" Margin="5"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Cargo:" Style="{StaticResource LabelText}" Margin="5"/>
                <TextBox   Grid.Row="2" Grid.Column="3" x:Name="TxtCargo" Margin="5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Salário:" Style="{StaticResource LabelText}" Margin="5"/>
                <TextBox   Grid.Row="3" Grid.Column="1" x:Name="TxtSalario" Margin="5"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Admissão:" Style="{StaticResource LabelText}" Margin="5"/>
                <DatePicker Grid.Row="3" Grid.Column="3" x:Name="DpDataAdmissao" Margin="5"/>

                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5,15,0,0">
                    <Button x:Name="BtnSalvar" 
                            Content="Salvar" 
                            Style="{StaticResource SaveButton}" 
                            Click="BtnSalvar_Click"/>

                    <Button x:Name="BtnCancelar" 
                            Content="Cancelar" 
                            Click="ButtonCancelar_Click"
                            Style="{StaticResource SaveButton}" 
                            Background="Gray"                   
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Expander>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Pesquisar por Nome ou CPF:" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPesquisar" Height="32" TextChanged="TxtPesquisar_TextChanged"/>
        </StackPanel>

        <DataGrid Grid.Row="3" x:Name="DataGridFuncionarios" 
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PessoaID}" Width="Auto"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="120"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="120"/>
                <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo}" Width="150"/>

                <DataGridTemplateColumn Header="Editar" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✏️" Background="Transparent" BorderThickness="0" FontWeight="Bold" FontSize="14" Foreground="#FF4A8DCA" Cursor="Hand" Click="ButtonEditar_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Excluir" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑️" Background="Transparent" BorderThickness="0" FontWeight="Bold" FontSize="14" Foreground="#FFC13939" Cursor="Hand" Click="ButtonExcluir_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>