<Window x:Class="EstoquePerfumes.MainWindow"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        Title="Menu Principal - Estoque de Perfumes" Height="450" Width="800"        WindowStartupLocation="CenterScreen">    <Grid Margin="15">        <Grid.RowDefinitions>            <RowDefinition Height="Auto"/>            <RowDefinition Height="*"/>            <RowDefinition Height="Auto"/>        </Grid.RowDefinitions>        <TextBlock x:Name="txtSaudacao" Grid.Row="0" Text="Olá, [Nome do Usuário]!" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">            <Button x:Name="btnListarPerfumes" Content="Ver Lista de Perfumes" Width="250" Margin="10" Padding="10"/>            <Button x:Name="btnCadastrarPerfume" Content="Cadastrar Novo Perfume" Width="250" Margin="10" Padding="10"/>            <Button x:Name="btnListarUsuarios" Content="Listar Usuários" Width="250" Margin="10" Padding="10" Click="btnListarUsuarios_Click"/>        </StackPanel>        <Button x:Name="btnLogoff" Grid.Row="2" Content="Logoff" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="15,5" Click="btnLogoff_Click"/>    </Grid></Window>